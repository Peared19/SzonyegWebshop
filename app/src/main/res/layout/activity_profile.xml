<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/rug_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Profilkép -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_profile" />

        <Button
            android:id="@+id/changePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Profilkép módosítása" />

        <Button
            android:id="@+id/deletePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Profilkép törlése" />

        <!-- Email cím -->
        <TextView
            android:id="@+id/profileEmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email cím"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

        <!-- Irányítószám -->
        <EditText
            android:id="@+id/zipEditText"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:hint="Irányítószám"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#80000000" />

        <!-- Város -->
        <EditText
            android:id="@+id/cityEditText"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:hint="Város"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóöőúüűÁÉÍÓÖŐÚÜŰ0123456789 .,-"
            android:imeOptions="actionNext"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#80000000" />

        <!-- Utca -->
        <EditText
            android:id="@+id/streetEditText"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:hint="Utca"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóöőúüűÁÉÍÓÖŐÚÜŰ0123456789 .,-"
            android:imeOptions="actionNext"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#80000000" />

        <!-- Házszám -->
        <EditText
            android:id="@+id/houseNumberEditText"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:hint="Házszám"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóöőúüűÁÉÍÓÖŐÚÜŰ0123456789 .,-"
            android:imeOptions="actionDone"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#80000000" />

        <Button
            android:id="@+id/saveAddressButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lakcím mentése"
            android:layout_marginTop="8dp" />

        <ProgressBar
            android:id="@+id/profileLoadingBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="visible"
            android:layout_gravity="center" />

        <!-- Orders container -->
        <LinearLayout
            android:id="@+id/ordersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView> 