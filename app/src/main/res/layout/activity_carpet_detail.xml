<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rug_background"
    android:fillViewport="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detailCarpetImageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/detailCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#CCFFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/detailCarpetName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carpet Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/detailCarpetPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999 Ft"
                    android:textSize="20sp"
                    android:textColor="#FF5722"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/detailCarpetMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anyag: Poliészter"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/detailCarpetSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Méret: 2.0 x 3.0 m (6.0 m²)"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/detailCarpetColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Szín: Szürke"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/detailCarpetDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leírás: Nagyon puha, modern mintás szőnyeg."
                    android:layout_marginTop="16dp" />

                <Button
                    android:id="@+id/addToCartBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kosárba"
                    android:layout_marginTop="32dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 